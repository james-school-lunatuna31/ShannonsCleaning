{
  "extends": [
    "plugin:prettier/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "rules": {
    "camelcase": "error",
    "quotes": ["error", "single", { "allowTemplateLiterals": true, "avoidEscape": true }],
    "no-unused-vars": "error",
    "prettier/prettier": ["error", {
      "singleQuote": true,
      "printWidth": 80,
      "tabWidth": 4,
      "useTabs": false,
      "semi": true,
      "trailingComma": "none",
      "bracketSpacing": true,
      "arrowParens": "avoid",
      "eol-last":["error","always"],
      "eol-first":["error","always"]
    }]
  }
}

